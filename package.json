{
  "name": "dotenv-ex",
  "version": "0.2.0",
  "description": "Loads environment variables from hierarchy of .env files for Node.js projects. ",
  "main": "index.js",
  "scripts": {
    "test": "tap --no-cov test/**/*.test.js",
    "lint": "standard | snazzy",
    "lint-ci": "standard",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test",
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/unjello/dotenv-ex.git"
  },
  "bugs": {
    "url": "https://github.com/unjello/dotenv-ex/issues"
  },
  "author": "Andrzej Lichnerowicz <andrzej@lichnerowicz.pl>",
  "license": "Unlicense",
  "dependencies": {
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "dotenv-expand": "^4.2.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "mock-fs": "^4.4.2",
    "mock-require": "^3.0.2",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "tap": "^11.1.4"
  }
}
